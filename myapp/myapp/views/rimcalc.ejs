
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" type="text/css" href="/css/style.css" />

</head>
<body>
<header>
    <div class="container">
        <div id="branding">
          <h4> <span class="highlight">PartiFest</span> </h4>
        </div>
    </div>
</header>
<% include ./nav %>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h2 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Rim Sales </h2>
        <% include ./partials/messages %>

                    
        <% if ( success_messages !='' ) { %>
          <div class="alert alert-success" >
              <strong><%= success_messages %> </strong>
          </div>
          <% } %>
      

        <form action="/rimcalc" method="POST">
          <div class="form-group">
            <label for="date">Date</label>
            <input
              type="date"
              id="date"
              name="date"
              class="form-control"
              placeholder="Enter Date"
            />
          </div>

          <div class="form-group">
            <label for="password">Current Rim Value</label>
            <input
              type="text"
              id="value"
              name="value"
              class="form-control"
              placeholder="Enter Total Rim Value"
            />
          </div>

          <div class="form-group">
            <label for="password">Sales</label>
            <input
              type="text"
              id="sales"
              name="sales"
              class="form-control"
              AutoPostBack="true" runat="server" onkeyup="substract()"
              placeholder="Enter Rim Sales"
            />
          </div>

          <div class="form-group">
            <label for="password">Cost</label>
            <input
              type="text"
              id="cost"
              name="cost"
              class="form-control"
              AutoPostBack="true" runat="server" onkeyup="substract()"
              placeholder="Enter Rim Cost"
            />
          </div>

          <div class="form-group">
            <label for="password">Profit</label>
            <input
              type="text"
              id="profit"
              name="profit"
              class="form-control"
              AutoPostBack="true" runat="server" onkeyup="substract()"
              placeholder="Enter Rim Profit"
            />
          </div>

          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    function substract() {
        var sales =parseInt(document.getElementById("sales").value);
        var cost = parseInt(document.getElementById("cost").value);
        var result = (sales - cost);

        document.getElementById("profit").value = result;
    }
</script>


</body>
</html>